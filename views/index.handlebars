<!-- search bar -->
<div class="container search-bar">
    <div class="search-bar-outer">
        <div class="search-bar-inner">
            <form action="/search" class="d-flex justify-content-center align-items-center">
                <h4 class="fs-4 m-0 p-0">尋找餐廳？</h4>
                <div class="input-group">
                    <input type="text" name="keyword" class="form-control rounded-pill me-4" placeholder="輸入餐廳、分類"
                        aria-label="Restaurant Name..." value="{{ keyword }}" aria-describedby="search-button">
                    <div class="input-group-append">
                        <button class="btn btn-major rounded-circle" type="submit" id="search-button"><i
                                class="fas fa-search"></i></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <div class="row row-cols-sm-3">
                {{#each restaurants}}
                <a href="/restaurants/{{ this.id }}" class="text-secondary">
                    <div class="card m-2 mb-4 rounded-4">
                        <img class="card-img-top rounded-bottom rounded-4" src="{{ this.image }}" alt="{{ this.name }}">
                        <div class="card-body p-3 d-flex flex-column">
                            <h6 class="card-title mb-2">{{ this.name }}</h6>

                            <div class="restaurant-category mb-4">
                                <i class="fas fa-utensils pr-2"></i> {{ this.category }}
                            </div>
                            <div class="d-flex justify-content-end">
                                <span class="rating-stars badge rounded-pill">{{ this.rating }}
                                    <i class="fas fa-star fa-xs"></i></span>
                            </div>

                        </div>
                    </div>
                </a>
                {{/each}}
            </div>
        </div>
    </div>
</div>